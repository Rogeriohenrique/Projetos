@model List<TrabalhoADO.Areas.Painel.Models.Empresa>
@{
    ViewBag.Title = "Painel";
}

<div class="text-justify">
    <table class="table table-striped table-hover">
        
        <a class="btn btn-default btn-lg" href="~/Painel/Painel/NovoCadastro" title="Novo">
            <i class="glyphicon glyphicon-plus"> Novo</i>
        </a>
        <br /><br /><br/>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Endereço</th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Telefone</td>
                <td>@item.Endereco</td>
                <td>
                    

                    <a class="btn btn-default btn-sm" href="@Url.Action("Update", new{@id= item.EmpresaId})" title="Editar">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </a>

                    <a class="btn btn-default btn-sm" href="@Url.Action("Detalhes", new{@id= item.EmpresaId})" title="Detalhes">
                        <i class="glyphicon glyphicon-align-justify"></i>
                    </a>

                    <a class="btn btn-default btn-sm" href="@Url.Action("Delete", new{@id= item.EmpresaId})" title="Excluir">
                        <i class="glyphicon glyphicon-remove text-danger"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
